/* pages/cardBag/cardBag.wxss */

.page_top{
      background-size: 100% 342px;
      padding-top: 2px;
      margin:0;
      padding:0;
      width:100%;

}
.top_img{
  height:323px;
  width:100%;
}
.logo {
    position: absolute;
    top: 30px;
    left: 0;
    width: 100%;
    height: 56px;
  
}
.logo .logo_img {
    display: block;
    margin: 0 auto;
    width: 70%;
    height: 40px;
}
.number{
  position:absolute;
  top:70px;
  left:0;
  width: 100%;
  height: 40px;
  display:flex;
  justify-content: center;
  align-items: center;

}


.icon image{
  width: 13px;
  height: 13px;
  display:inline-block;
  margin-bottom: 4px;
}
text{
  color:#fff;
  margin-left:5px;
  font-size:14px;
}
.banner{
  width:100%;
   position:absolute;
  top:135px;
  left:0px;

  
}
.img{
  width: 622rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  height: 334rpx;
  transform: scale(0.9);
}
.container .locaUp {
    position: relative;
    width: 80%;
    height: 214rpx;
    border-radius: 15rpx;
    margin: 36px auto;
    border: 1px solid rgba(222, 222, 222, 1);
    box-shadow: 7px 7px 14px 0px rgba(66,66,66,0.1);
}
.locaUp .bendi {
    content: "";
    width: 210rpx;
    height: 210rpx;
    position: absolute;
    top:-25rpx;
    left: 5%;
    margin-left: -11px;
    /* border-radius: 50%; */
}

.btn_txt {
    position: absolute;
    top: 9%;
    right: 0;
    width: 60%;
    font-size: 36rpx;
    font-weight: bold;
    color: #333333;
    letter-spacing: 8px;
}
.btn_cont {
    position: absolute;
    top: 33%;
    right: 0;
    width: 60%;
    font-size: 24rpx;
    font-weight: bold;
    color: #666;
}
.btn_cont span {
    display: inline-block;
    line-height: 37.5px;
    border-bottom: 0.75px solid #999;
}

.btn_img {
    position: absolute;
    top: 68%;
    right: 0;
    width: 60%;
    font-size: 24rpx;
    font-weight: bold;
    color: #666;
    display:flex;
    justify-content: space-between;
    align-items:center; 
    margin-top:10px;
}
.btn_img .left{
  flex:1;
  display:flex;
  align-items: center;

}

.locaUp .left .btn_pdf,.locaUp .right .btn_pdf{
    display: inline-block;
    width: 11.5px;
    height: 11.5px;
    background-size: 100% 100%;
    vertical-align: middle;
    margin-right: 10px;
}

.btn_img .right{
  flex:1;
}


/* 遮罩层 */
.link_c{
  height: 270px;
  width:95%;
  position:fixed;
  top:50%;
  left:50%;
  margin-top:-135px;
  margin-left:-47.5%;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 9.6px;
  border-top-right-radius: 16px;
  z-index: 9999;
}

.msm_print_val {
    resize: none;
    outline: none;
    background: rgba(255, 255, 255, 0.9);
    display: block;
    width: 80%;
    height: 125px;
    margin: 0 auto;
    padding: 23.6px;
    margin-top:10px;
}
textarea {
    font-size: 16px;
    padding: 0 0.3rem;
    outline: none;
    /* font-size: 0.5rem; */
    border-width: 0px;
    border-style: none;
    border-image: none;
    border: 0.02rem solid darkgoldenrod;
}

button{
  height:37.5px;
  width:80%;
  margin-top:10px; 
  background: orange;
  text-align: center;
  color:#fff;
  line-height: 37.5px;
}

.hide{
  display:none;
  opacity:0;
}

.show{
  display:block;
  opacity: 1;
}

.msm_false {
    position: absolute;
    top: 0;
    right: 0;
    width: 32px;
    height: 32px;
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 50%;
}

.top{
  height:32px;
  line-height:32px;
  text-align: center;
  margin-top:8px;
}
.loadBox{
  position: fixed;
    top:120px;
    left: 20px;
    background-color: white;
    opacity: .6;
    z-index: 1003;
}
.locker_warp {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    -webkit-overflow-scrolling: touch;
    filter: alpha(opacity=60);
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 555;

}
.locker {
    text-align: center;
    transform: translateY(-150%);
    z-index: 10000;
    position: fixed;
    top: 30%;
    left: 12%;
    width: 76%;
    height: 196px;
    padding: 18.75px 0px 48.75px 0px;
    border-radius: 18px;
    background-color: rgba(255, 255, 255, 1);
    box-shadow: 0 0 38px darkgrey;
}
.locker_ts {
    width: 50%;
    height: 52.5px;
    background-size: 100% 100%;
    color: #fff;
    line-height: 41.25px;
    font-size: 18px;
    letter-spacing: 3.75px;
    position: absolute;
    left: -4%;
}
.locker_ts image{
   width: 100%;
    height: 52.5px;
    background-size: 100% 100%;
    line-height: 41.25px;
    font-size: 18px;
    letter-spacing: 3.75px;
    position: absolute;
    left: -1px;
}
.locker_ts text{
  position:absolute;
  top:0px;
  left:10px;
  font-size:18px;
}
.locker_img image {
  position:absolute;
  top:78px;
  left:80px;
  width: 114px;
  height:79px;

}
.locker_con {
    position:absolute;
    top:158px;
    left:120px;
    font-size:14px;
}
#locker_btn {
    position: absolute;
    bottom: 0;
    left:0;
    width: 100%;
    height: 45px;
    line-height: 45px;
    background: #f5f5f5;
    border-radius: 7px;
    color: #333;
    letter-spacing: 7px;
    font-size: 18px;
}
.locker_hidden{
  position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    width: 100%;
    height: 100%;
    -webkit-overflow-scrolling: touch;
    filter: alpha(opacity=60);
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 555;
    display:none;
}
