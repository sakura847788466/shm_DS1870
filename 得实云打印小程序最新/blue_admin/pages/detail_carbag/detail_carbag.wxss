/* 下拉框 */
.select_box {
  background: #fff;
  width: 56.25px;
  height: 22.5px;
  margin: 0 auto;
  line-height: 22.5px;
  text-align: left;
  position: absolute;
  top: 7.5px;
  right: 17px;
}

.select {
  box-sizing: border-box;
    display: inline-block;
  width: 100%;
  height: 22.5px;
  border: 1px solid #efefef;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 28rpx;
  display:inline-block;
  color: rgb(102, 102, 102);
  line-height: 22.5px;
  /* height: 22.5px; */
  position: absolute;
  top: 0px;
  left: 5px;
}

.select_img {
  margin-left:20px;
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  z-index:1000;
  position: absolute;
  top: 22px;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 22.5px;
  font-size: 14px;
  border-bottom: 1px solid #efefef;
  color: rgb(102, 102, 102);
  padding-left:5px;

}
