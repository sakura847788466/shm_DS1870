/* page/print/print.wxss */
.container {
  display: flex;
  justify-content: center; 
  flex-direction:column;
  padding: 0 30rpx 0 30rpx;
  align-items: center;
}

.view-title{
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
  display: flex;  
  width: 80%;
  flex-direction: row; 
  justify-content: center;
  height:80rpx;
  color: #444444
}
.devName{
  text-align:right;
}
.title{
  justify-content: center;
  font-size: 50rpx;
  color: #444444;
  margin-bottom: 10rpx;
}

.view1{
  display: flex;
  flex-direction:row;
  width: 100%;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
  color: #666666;
}

.viewitem{
  width: 100%;
  height: 600rpx;
  margin-bottom: 15rpx;
  margin-top: 25rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  background: #ece9e9;
  border-radius: 20rpx;
  justify-content: center;
}
.rightAlign{
  margin-right: 20rpx;
  position:fixed; 
  right:0;
}
.view2{
  display: flex;
  flex-direction:row;
  align-items: center;
  width: 90%;
  height: 70rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
  justify-content: center;

}
.viewadd{
  display: flex;
  flex-direction:column;
  width: 90%;
  height: 120rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  justify-content: center;
  align-items:center;
  font-size: 24rpx;
  color:#a0a0a0;
}
.imageSet{
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 5rpx;
}
.titleHead{
  font-weight:bold;
  font-size: 36rpx;
  color: #666666;
}
.view3{
  display: flex;
  flex-direction:row;
  position: fixed;
  justify-content: center;
  bottom: 20rpx;
  width: 100%;
  height: 15%;
}
.toPrint {
  width: 40%;
  background-color: #0090ff;
  color: white;
  border-radius: 98rpx;
}
.input {
  height: 100%;
  text-align: center;
  border: 1px solid lightgray;
  background-color: #fff;
  border-radius: 6px;
  color:#333333;
}
.input2 {
  text-align: center;
  border: 1px solid lightgray;
  background-color: #fff;
  border-radius: 6px;
  width: 100rpx;
}
.inputAddr {
  text-align: center;
  border: 1px solid lightgray;
  background-color: #fff;
  border-radius: 6px;
}
/* 按下变颜色 */
.hover {
  background:  rgb(191, 156, 236);
}

.btnmodel{
  width: 40%;
  height: 80%;
  text-align: center;
  flex-direction:column;
  display: flex;
  margin: 0rpx 20rpx;
  padding-top: 20rpx;
  align-items: center;
  justify-content: center;
  background: #fff;
  border-radius: 15rpx;
}
.imgV{
  width:20%;
  height:40%;
  margin-bottom: 5%;
  display: flex;
  justify-content: center;
}
.fontInfo{
  font-size: 36rpx;
  font-style:normal;
  font-weight:550;
  color: #555555;
}